{
  "name": "my-platform",
  "private": true,
  "engines": {
    "node": ">=22 <25"
  },
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:generate": "pnpm --filter @my-platform/db run generate",
    "db:push": "pnpm --filter @my-platform/db exec prisma db push --schema prisma/schema.prisma --skip-generate",
    "db:up": "docker compose -f infra/docker/docker-compose.db.yml up -d",
    "db:down": "docker compose -f infra/docker/docker-compose.db.yml down",
    "postinstall": "pnpm run db:generate",
    "livekit:up": "docker compose -f infra/docker/docker-compose.livekit.yml up -d",
    "livekit:down": "docker compose -f infra/docker/docker-compose.livekit.yml down"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "prisma": "6.19.2",
      "@prisma/client": "6.19.2"
    }
  }
}
